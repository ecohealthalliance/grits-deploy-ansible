[global]
server.socket_host: "{{ ansible_eth0.ipv4.address }}"
server.socket_port: {{ girder_socket_port }}
tools.proxy.on: True
tools.proxy.base: "{{ public_url }}{{ girder_mount_path }}"
tools.proxy.local: ""

[server]
mode: "{{ girder_deployment_mode }}"
api_root: "{{ girder_mount_path }}/api/v1"
static_root: "{{ girder_mount_path }}/static"

[logging]
log_root: "/opt/girder"
